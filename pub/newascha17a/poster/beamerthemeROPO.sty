\tcbset{  
	every box/.style={                                             % set a custom tcolorbox  
	bottom=5mm,                                    % distance between the body text and the bottom frame
	top=5mm,                                      % distance between the body text and the top frame
	boxrule=1mm,                                   % frame width
	bottomtitle=2mm,                               % distance between the title text and the bottom title frame               
	toptitle=2mm,                                  % distance between the title text and the top title frame
	lefttitle=1cm,                                 % title text left margin
	colframe=HRO1,
	colback=white,
	beforeafter skip=0.5cm,
	center title,
	fonttitle=\usebeamerfont{block title},
	width=1.00\textwidth,
	center,
	arc=3mm
}}


\newenvironment<>{myblock}[2]{%
 \begin{actionenv}%
 \def\insertblocktitle{\centering#1}%
 \def\group{#2}
 \par%
 \usebeamertemplate{block begin}\leftskip=14pt\rightskip=14pt\vspace{0pt}}
 {\par\vspace{0pt}\usebeamertemplate{block end}
 \end{actionenv}}

